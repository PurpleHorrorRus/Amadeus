        "dev": "cross-env NODE_ENV=development node .electron-nuxt/index.js",
        "run:build": "cross-env NODE_ENV=production node .electron-nuxt/index.js",
        "build": "yarn run:build --publish never",
        "build:linux": "docker run --privileged --rm -v E:\\Projects\\Meridius:/usr/meridius -w /usr/meridius meridius-linux yarn build",
        "build:all": "yarn build && yarn build:linux",
        "release": "yarn run:build --publish always",
        "postinstall": "electron-builder install-app-deps",
