{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",

        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM",
            "DOM.Iterable"
        ],

        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": false,
        "noEmit": true,
        "baseUrl": ".",
        "jsx": "preserve",
        "typeRoots": ["./types"],

        "paths": {
            "~/*": ["./*"],
            "~icons/*": ["./assets/icons/*"]
        },

        "types": [
            "@types/node",
            "@nuxt/types"
        ]
    },

    "include": [
        "./**/*"
    ],

    "exclude": [
        ".nuxt",
        "node_modules"
    ]
}